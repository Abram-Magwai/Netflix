@page
@{
    Layout = "_RegistrationLayout";
}

<div class="credit-container">
    <div class="credit-body">
        <p>STEP <b>3</b> OF <b>3</b></p>

        <h1>Enter your gift</h1>
        <div class="form-field">
            <input type="text" name="" id="gift-code" placeholder="Gift Card Code or Pin">
        </div>
        <div class="plan-info">
            <div>
                <div id="plan-amount">
                    <p id="amount">R199/month</p>
                </div>
                <div id="plan-name">
                    <p id="name">Premium Plan</p>
                </div>
            </div>
            <div>
                <a href="planform">Change</a>
            </div>
        </div>
        
        <div style="height: 60px;margin: 20px 0">
            <button type="submit" class="next">Redeem Gift Code</button>
        </div>  
        
        <span>This page is protected by Google reCAPTCHA to ensure you're not a bot. <a href="#">Learn more.</a></span>
</div>