    <script>
        document.querySelectorAll(".plan").forEach((plan) => {
            plan.addEventListener("click", () => {
                Deselect();

                plan.classList.add("active");
                if (plan.classList.contains("mobile")) {
                    document.querySelectorAll(".mob").forEach(mob => mob.classList.add("active"))
                } else if (plan.classList.contains("basic")) {
                    document.querySelectorAll(".bas").forEach(mob => mob.classList.add("active"))
                } else if (plan.classList.contains("standard")) {
                    document.querySelectorAll(".sta").forEach(mob => mob.classList.add("active"))
                } else if (plan.classList.contains("premium")) {
                    document.querySelectorAll(".pre").forEach(mob => mob.classList.add("active"))
                }
            })
        })

        function Deselect() {
            document.querySelectorAll(".active").forEach(x => {
                x.classList.remove("active");
            })
        }
    </script>