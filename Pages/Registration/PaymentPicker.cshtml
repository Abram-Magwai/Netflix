@page
@{
    Layout = "_RegistrationLayout";
}

<div class="picker-container">
    <img src="~/assets/images/Lock.png" height="55px" alt="Lock">

    <p>STEP <b>3</b> OF <b>3</b></p>
    <h1>Set up your payment</h1>

    <p style="font-size: 18px; text-align:center;margin-bottom: 10px">Your membership starts<br> as soon as you set
        up<br> payment.</p>
    <div class="info">No commitments.</div>
    <div class="info">Cancel online anytime.</div>

    <div class="payment-type-container">
        <div class="secure">
            <p>Secure Server</p>
            <svg id="secure-server-icon" style="height: 20px;margin-left: 6px" viewBox="0 0 12 16"
                class="secure-server-badge--icon">
                <g fill="none">
                    <g fill="#FFB53F">
                        <path
                            d="M8.4 5L8.4 6.3 10 6.3 10 5C10 2.8 8.2 1 6 1 3.8 1 2 2.8 2 5L2 6.3 3.6 6.3 3.6 5C3.6 3.7 4.7 2.6 6 2.6 7.3 2.6 8.4 3.7 8.4 5ZM11 7L11 15 1 15 1 7 11 7ZM6.5 11.3C7 11.1 7.3 10.6 7.3 10.1 7.3 9.3 6.7 8.7 6 8.7 5.3 8.7 4.7 9.3 4.7 10.1 4.7 10.6 5 11.1 5.5 11.3L5.2 13.4 6.9 13.4 6.5 11.3Z">
                        </path>
                    </g>
                </g>
            </svg>
        </div>
        <a href="creditoption">
            <div class="payment-type">
                <div id="first">
                    <div id="payment-info">Credit or Debit Card</div>
                    <div id="card-types">
                        <img src="~/assets/images/visa.svg" alt="visa">
                        <img src="~/assets/images/master.svg" alt="visa">
                        <img src="~/assets/images/express.svg" alt="visa">
                    </div>
                </div>
                <div>
                    <img src="~/assets/images/arrow.svg" id="arrow" alt="visa">
                </div>
            </div>
        </a>
        <a href="giftoption">
            <div class="payment-type">
                <div id="first">
                    <div id="payment-info">Gift Code</div>
                    <div id="card-types">
                        <img src="~/assets/images/netflix.svg" alt="visa">
                    </div>
                </div>
                <div>
                    <img src="~/assets/images/arrow.svg" id="arrow" alt="visa">
                </div>
            </div>
        </a>
    </div>
</div>